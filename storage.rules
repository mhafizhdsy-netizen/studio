rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Aturan untuk Gambar Profil
    match /profile-images/{userId}/{allPaths=**} {
      // Siapa saja boleh membaca (melihat) gambar profil
      allow read;
      // Hanya pengguna yang terautentikasi dan ID-nya cocok dengan {userId} di path
      // yang boleh menulis (mengunggah, mengubah, menghapus) gambar.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Aturan untuk Gambar Produk
    match /product-images/{userId}/{allPaths=**} {
      // Siapa saja boleh membaca (melihat) gambar produk
      allow read;
      // Hanya pengguna yang terautentikasi dan ID-nya cocok dengan {userId} di path
      // yang boleh menulis (mengunggah, mengubah, menghapus) gambar.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Aturan untuk Berkas di Chat
    match /chat-files/{conversationId}/{userId}/{allPaths=**} {
      // Izinkan baca jika pengguna adalah partisipan percakapan
      allow read: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      // Izinkan tulis jika pengguna adalah pengirim dan partisipan percakapan
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

    