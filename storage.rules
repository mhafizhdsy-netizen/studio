rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Aturan untuk Gambar Profil
    match /profile-images/{userId}/{allPaths=**} {
      // Siapa saja boleh membaca (melihat) gambar profil
      allow read;
      // Hanya pengguna yang terautentikasi dan ID-nya cocok dengan {userId} di path
      // yang boleh menulis (mengunggah, mengubah, menghapus) gambar.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Aturan untuk Gambar Produk
    match /product-images/{userId}/{allPaths=**} {
      // Siapa saja boleh membaca (melihat) gambar produk
      allow read;
      // Hanya pengguna yang terautentikasi dan ID-nya cocok dengan {userId} di path
      // yang boleh menulis (mengunggah, mengubah, menghapus) gambar.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Aturan untuk Berkas di Chat
    match /chat-files/{sessionId}/{userId}/{allPaths=**} {
      // Izinkan baca dan tulis jika pengguna adalah partisipan percakapan
      allow read, write: if request.auth != null && request.auth.uid == userId && get(/databases/$(database)/documents/chat_sessions/$(sessionId)).data.participantIds.hasAny([request.auth.uid]);
    }
  }
}
